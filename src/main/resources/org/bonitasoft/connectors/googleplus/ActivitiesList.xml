<connector>
    <connectorId>ActivitiesList</connectorId>
    <version>5.0</version>
    <icon>GooglePlus.jpg</icon>
    <categories>
        <category>
            <name>Google+</name>
            <icon>org/bonitasoft/connectors/googleplus/GooglePlus.jpg</icon>
        </category>
    </categories>
    <inputs>
        <setter>
            <setterName>setApiKey</setterName>
            <required></required>
            <parameters>
                <string></string>
            </parameters>
        </setter>
        <setter>
            <setterName>setFields</setterName>
            <parameters>
                <string></string>
            </parameters>
        </setter>
        <setter>
            <setterName>setResultRepresentationType</setterName>
            <required></required>
            <parameters>
                <string>JSON</string>
            </parameters>
        </setter>
        <setter>
            <setterName>setUserId</setterName>
            <required></required>
            <parameters>
                <string></string>
            </parameters>
        </setter>
        <setter>
            <setterName>setCollection</setterName>
            <required></required>
            <parameters>
                <string>public</string>
            </parameters>
        </setter>
        <setter>
            <setterName>setMaxResults</setterName>
            <parameters>
                <long>10</long>
            </parameters>
        </setter>
    </inputs>
    <outputs>
        <getter>
            <name>result</name>
            <metadata />
        </getter>
    </outputs>
    <pages>
        <page>
            <pageId>pageGlobalConfig</pageId>
            <widgets>
                <text>
                    <labelId>apiKey</labelId>
                    <setter reference="/connector/inputs/setter" />
                    <size>40</size>
                    <maxChar>40</maxChar>
                </text>
                <select>
                    <labelId>resultRepresentationType</labelId>
                    <setter reference="/connector/inputs/setter[3]" />
                    <values>
                        <entry>
                            <string>JSON</string>
                            <string>JSON</string>
                        </entry>
                    </values>
                    <editable>false</editable>
                </select>
                <text>
                    <labelId>fields</labelId>
                    <setter reference="/connector/inputs/setter[2]" />
                    <size>40</size>
                    <maxChar>120</maxChar>
                </text>
            </widgets>
        </page>
        <page>
            <pageId>pageActivities</pageId>
            <widgets>
                <text>
                    <labelId>userId</labelId>
                    <setter reference="/connector/inputs/setter[4]" />
                    <size>40</size>
                    <maxChar>40</maxChar>
                </text>
                <select>
                    <labelId>collection</labelId>
                    <setter reference="/connector/inputs/setter[5]" />
                    <values>
                        <entry>
                            <string>public</string>
                            <string>public</string>
                        </entry>
                    </values>
                    <editable>false</editable>
                </select>
                <text>
                    <labelId>maxResults</labelId>
                    <setter reference="/connector/inputs/setter[6]" />
                    <size>5</size>
                    <maxChar>5</maxChar>
                </text>
            </widgets>
        </page>
    </pages>
</connector>